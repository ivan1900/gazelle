generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model user {
  id         Int        @id @default(autoincrement())
  name       String     @db.VarChar(100)
  email      String     @unique(map: "user_email_unique") @db.VarChar(100)
  password   String?    @db.VarChar(100)
  google_id  String?    @db.VarChar(100)
  created_at DateTime   @default(now()) @db.DateTime(0)
  updated_at DateTime   @db.DateTime(0)
  meta       Json?
  activity   activity[]
}

model action_time {
  id          Int       @id @default(autoincrement())
  bitacora_id Int
  start       DateTime? @db.DateTime(0)
  end         DateTime? @db.DateTime(0)
  activity    activity? @relation(fields: [bitacora_id], references: [id])

  @@index([bitacora_id])
}

model activity {
  id               Int           @id @default(autoincrement())
  name             String        @unique(map: "activity_pk_2") @db.VarChar(100)
  description      String?       @db.VarChar(255)
  user_id          Int
  activity_type_id Int
  color            String?       @db.VarChar(8)
  created_at       DateTime?     @default(now()) @db.DateTime(0)
  updated_at       DateTime?     @db.DateTime(0)
  status           String        @db.VarChar(20)
  action_time      action_time[]
  user             user?         @relation(fields: [user_id], references: [id])

  @@index([user_id], map: "bitacora__index_user_id")
}

model activity_types {
  id           Int     @id @default(autoincrement())
  name         String  @unique(map: "activity_types_pk_2") @db.VarChar(60)
  isProductive Boolean @default(false)
  color        String? @db.VarChar(8)
}
